{
  "compilerOptions": {
    "target": "es6",                           // Set the JavaScript version to output (ES6)
    "module": "esnext",                      // Specify module code generation (CommonJS for Node.js)
    "lib": ["es6"],                            // Include the ES6 library files
    "outDir": "./dist",                        // Output directory for compiled files
    "rootDir": "./src",                        // Root directory for source files
    "strict": true,                            // Enable all strict type-checking options
    "esModuleInterop": true,                   // Enables default imports for CommonJS modules
    "skipLibCheck": true,                      // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,  // Ensure consistent casing in file names
    "noImplicitAny": true,                     // Raise an error on expressions and declarations with an implied 'any' type
    "moduleResolution": "node",                // Module resolution strategy (Node.js style)
    "resolveJsonModule": true,                 // Allows importing JSON files as modules
    "isolatedModules": true                    // Ensure that each file can be safely transpiled independently
  },
  "include": [
    "src/**/*"                                 // Include all files in the src directory
  ],
  "exclude": [
    "node_modules",                            // Exclude node_modules
    "dist"                                     // Exclude dist directory
  ]
}
